{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs22",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "functions/**"],
    "rewrites": [
      {
        "source": "/chatWithOpenAI",
        "function": "chatWithOpenAI"
      },
      {
        "source": "/parsePdf",
        "function": "parsePdf"
      },
      {
        "source": "/receiveHealthData",
        "function": "receiveHealthData"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
